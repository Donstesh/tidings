<%- include('partials/header') %>

    <main>
        
        <%- include('partials/nav') %>

        <div class="container">
            <p>Welcome, <%= locals.username %></p>

            <% for(let tyd of tyds) { %>

                <% let username = tyd.fullname.split(' ')[0].toLowerCase() %>
                <% let avatar = Math.floor(Math.random() * 5) %>

                <div class="tyd">
                    <div id="upper">
                        <img src="/images/avatars/<%= `${avatar}.png` %>" alt="">
                        <div>
                            <h3>@<%= username %></h3>
                            <p><%= tyd.tyd %></p>
                        </div>
                    </div>
                    
                    <div id="lower">
                        <p><%= tyd.datePosted.toString().split(' ').slice(0, 5).join(' ') %></p>
                        <div>
                            <button>
                                <form action="/updatelikes?tydId=<%=tyd.id%>&userId=<%=locals.userId%>" method="post">
                                    <button type="submit">
                                        <img src="/images/icons/heart.svg" alt="">
                                    </button>
                                </form>
                            </button>
                            <span class="likes"><%= avatar + 15 %></span>
                        </div>
                    </div>                      
                </div>

            <% } %>
        </div>

    </main>

<%- include('partials/footer') %>